{
  "compilerOptions": {
    "outDir": "./module",
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "typeRoots" : [
      "./node_modules/@types",
      "./types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist",
    "node_modules"
  ]
}
